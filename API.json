{
  "openapi": "3.0.3",
  "info": {
    "title": "Learning Resource Platform API",
    "version": "1.0.0",
    "description": "根据《项目需求文档》整理的接口定义，适用于 APIFOX 导入。所有接口默认返回统一响应结构。"
  },
  "servers": [
    {
      "url": "https://localhost:8080",
      "description": "默认服务器"
    }
  ],
  "components": {
    "schemas": {
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": { "type": "integer", "format": "int32" },
          "message": { "type": "string" },
          "data": { "type": "object" },
          "timestamp": { "type": "integer", "format": "int64" }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string", "format": "password" }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["username", "password", "email"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string", "format": "password" },
          "email": { "type": "string", "format": "email" },
          "realName": { "type": "string" }
        }
      },
      "ResourcePayload": {
        "type": "object",
        "required": ["title", "courseId"],
        "properties": {
          "title": { "type": "string" },
          "description": { "type": "string" },
          "courseId": { "type": "integer", "format": "int64" },
          "tags": { "type": "array", "items": { "type": "string" } },
          "visibility": { "type": "string", "enum": ["ALL", "COURSE", "CLASS"] }
        }
      },
      "QuestionPayload": {
        "type": "object",
        "required": ["title", "content", "courseId"],
        "properties": {
          "title": { "type": "string" },
          "content": { "type": "string" },
          "courseId": { "type": "integer", "format": "int64" },
          "tags": { "type": "array", "items": { "type": "string" } }
        }
      },
      "AnswerPayload": {
        "type": "object",
        "required": ["content"],
        "properties": {
          "content": { "type": "string" },
          "attachments": {
            "type": "array",
            "items": { "type": "string", "format": "uri" }
          }
        }
      },
      "NotificationRead": {
        "type": "object",
        "properties": {
          "notificationIds": {
            "type": "array",
            "items": { "type": "integer", "format": "int64" }
          }
        }
      }
    },
    "responses": {
      "Success": {
        "description": "通用成功响应",
        "content": {
          "application/json": {
            "schema": { "$ref": "#/components/schemas/ApiResponse" }
          }
        }
      }
    }
  },
  "paths": {
    "/api/v1/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "学生注册",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/RegisterRequest" } }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "登录",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/LoginRequest" } }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "登出",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/auth/refresh-token": {
      "post": {
        "tags": ["Auth"],
        "summary": "刷新 Token",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/auth/forgot-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "忘记密码",
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object", "properties": { "email": { "type": "string", "format": "email" } }, "required": ["email"] } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/auth/reset-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "重置密码",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": { "type": "string" },
                  "newPassword": { "type": "string", "format": "password" }
                },
                "required": ["token", "newPassword"]
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/users/profile": {
      "get": {
        "tags": ["User"],
        "summary": "获取个人信息",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "put": {
        "tags": ["User"],
        "summary": "更新个人信息",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "realName": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "phone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/users/avatar": {
      "put": {
        "tags": ["User"],
        "summary": "修改头像",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": { "type": "object", "properties": { "file": { "type": "string", "format": "binary" } }, "required": ["file"] }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/users/password": {
      "put": {
        "tags": ["User"],
        "summary": "修改密码",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "oldPassword": { "type": "string", "format": "password" },
                  "newPassword": { "type": "string", "format": "password" }
                },
                "required": ["oldPassword", "newPassword"]
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/courses": {
      "get": {
        "tags": ["Course"],
        "summary": "课程列表",
        "parameters": [
          { "name": "keyword", "in": "query", "schema": { "type": "string" } },
          { "name": "college", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "post": {
        "tags": ["Course"],
        "summary": "创建课程（管理员）",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["courseName"],
                "properties": {
                  "courseName": { "type": "string" },
                  "courseCode": { "type": "string" },
                  "college": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/courses/{id}": {
      "get": {
        "tags": ["Course"],
        "summary": "课程详情",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "put": {
        "tags": ["Course"],
        "summary": "更新课程（管理员）",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "delete": {
        "tags": ["Course"],
        "summary": "删除课程（管理员）",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/courses/{id}/teachers": {
      "get": {
        "tags": ["Course"],
        "summary": "获取课程教师",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "post": {
        "tags": ["Course"],
        "summary": "分配教师（管理员）",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "teacherIds": {
                    "type": "array",
                    "items": { "type": "integer", "format": "int64" }
                  }
                },
                "required": ["teacherIds"]
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/resources": {
      "get": {
        "tags": ["Resource"],
        "summary": "资源列表",
        "parameters": [
          { "name": "courseId", "in": "query", "schema": { "type": "integer", "format": "int64" } },
          { "name": "keyword", "in": "query", "schema": { "type": "string" } },
          { "name": "sort", "in": "query", "schema": { "type": "string", "enum": ["latest", "download"] } }
        ],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "post": {
        "tags": ["Resource"],
        "summary": "上传资源",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "meta": { "type": "string", "description": "ResourcePayload JSON 字符串" },
                  "file": { "type": "string", "format": "binary" }
                },
                "required": ["file", "meta"]
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/resources/{id}": {
      "get": {
        "tags": ["Resource"],
        "summary": "资源详情",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "put": {
        "tags": ["Resource"],
        "summary": "更新资源信息",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/ResourcePayload" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "delete": {
        "tags": ["Resource"],
        "summary": "删除资源",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/resources/{id}/download": {
      "get": {
        "tags": ["Resource"],
        "summary": "下载资源",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": {
          "200": {
            "description": "文件流",
            "content": { "application/octet-stream": { "schema": { "type": "string", "format": "binary" } } }
          }
        }
      }
    },
    "/api/v1/resources/my-uploads": {
      "get": {
        "tags": ["Resource"],
        "summary": "我上传的资源",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/questions": {
      "get": {
        "tags": ["Question"],
        "summary": "问题列表",
        "parameters": [
          { "name": "courseId", "in": "query", "schema": { "type": "integer", "format": "int64" } },
          { "name": "keyword", "in": "query", "schema": { "type": "string" } },
          { "name": "status", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "post": {
        "tags": ["Question"],
        "summary": "提交问题",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/QuestionPayload" } }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/questions/{id}": {
      "get": {
        "tags": ["Question"],
        "summary": "问题详情",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "put": {
        "tags": ["Question"],
        "summary": "更新问题",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/QuestionPayload" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "delete": {
        "tags": ["Question"],
        "summary": "删除问题",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/questions/my-questions": {
      "get": {
        "tags": ["Question"],
        "summary": "我的提问",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/questions/{id}/answers": {
      "post": {
        "tags": ["Answer"],
        "summary": "回答问题",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnswerPayload" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/answers/{id}": {
      "put": {
        "tags": ["Answer"],
        "summary": "更新回答",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/AnswerPayload" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "delete": {
        "tags": ["Answer"],
        "summary": "删除回答",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/answers/my-answers": {
      "get": {
        "tags": ["Answer"],
        "summary": "我的回答",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/notifications": {
      "get": {
        "tags": ["Notification"],
        "summary": "通知列表",
        "parameters": [
          { "name": "type", "in": "query", "schema": { "type": "string" } },
          { "name": "isRead", "in": "query", "schema": { "type": "boolean" } }
        ],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/notifications/unread-count": {
      "get": {
        "tags": ["Notification"],
        "summary": "未读数量",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/notifications/{id}/read": {
      "put": {
        "tags": ["Notification"],
        "summary": "标记已读",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/notifications/read-all": {
      "put": {
        "tags": ["Notification"],
        "summary": "全部已读",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": { "schema": { "$ref": "#/components/schemas/NotificationRead" } }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/admin/teachers": {
      "get": {
        "tags": ["Admin"],
        "summary": "教师列表",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "post": {
        "tags": ["Admin"],
        "summary": "添加教师",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email"],
                "properties": {
                  "username": { "type": "string" },
                  "email": { "type": "string", "format": "email" },
                  "title": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/admin/teachers/{id}": {
      "put": {
        "tags": ["Admin"],
        "summary": "更新教师",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "type": "object" } } }
        },
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      },
      "delete": {
        "tags": ["Admin"],
        "summary": "删除教师",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }],
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/admin/students": {
      "get": {
        "tags": ["Admin"],
        "summary": "学生列表",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    },
    "/api/v1/admin/statistics": {
      "get": {
        "tags": ["Admin"],
        "summary": "系统统计数据",
        "responses": { "200": { "$ref": "#/components/responses/Success" } }
      }
    }
  }
}

